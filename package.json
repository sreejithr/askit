{
	"name": "askit",
	"displayName": "askit",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "askIt.chat",
				"title": "Chat with authors of the selected code",
				"category": "AskIt",
				"icon": {
					"light": "resources/light/chat.svg",
					"dark": "resources/dark/chat.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "askIt.chat",
					"when": "view == chat_authors",
					"group": "navigation@1"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "chat-explorer",
					"title": "TEAMS CHAT",
					"icon": "resources/MS_Teams.svg"
				}
			]
		},
		"views": {
			"chat-explorer": [
				{
					"id": "chat_authors",
					"name": "AUTHORS",
					"when": "askItExtensionActivated"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0",
		"git-blame": "^0.1.1",
		"moment": "^2.10.6",
		"path": "^0.12.7",
		"vscode": "0.11.x"
	},
	"dependencies": {
		"simple-git": "^1.122.0"
	}
}
